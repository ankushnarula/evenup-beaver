# Managed by puppet - do not modify
[beaver]
logstash_version: <%= scope.lookupvar('beaver::logstash_version') %>

tcp_host: <%= scope.lookupvar('beaver::tcp_host') %>
tcp_port: <%= scope.lookupvar('beaver::tcp_port') %>

redis_url: redis://<%= scope.lookupvar('beaver::redis_host') %>:<%= scope.lookupvar('beaver::redis_port') %>/<%= scope.lookupvar('beaver::redis_db') %>
redis_namespace: <%= scope.lookupvar('beaver::redis_namespace') %>

<% if scope.lookupvar('beaver::enable_sincedb') -%>
sincedb_path: <%= scope.lookupvar('beaver::sincedb_path') %>
<% end -%>
<% if scope.lookupvar('beaver::multiline_regex_before') != '' -%>
multiline_regex_before: <%= scope.lookupvar('beaver::multiline_regex_before') %>
<% end -%>
<% if scope.lookupvar('beaver::multiline_regex_after') != '' -%>
multiline_regex_after: <%= scope.lookupvar('beaver::multiline_regex_after') %>
<% end -%>
